<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/textTripId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="16sp" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="24dp" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonRecenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recenter"
            android:padding="12dp"
            android:backgroundTint="#007AFF"
            android:textColor="#FFFFFF"
            android:elevation="6dp"
            android:layout_margin="16dp"
            android:layout_gravity="end|bottom"/>

        <Button
            android:id="@+id/buttonStartTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Trip"
            android:padding="12dp"
            android:backgroundTint="#00CC44"
            android:textColor="#FFFFFF"
            android:elevation="6dp"
            android:layout_margin="16dp"
            android:layout_gravity="start|bottom"/>

        <Button
            android:id="@+id/buttonStopTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:padding="12dp"
            android:backgroundTint="#CC0000"
            android:textColor="#FFFFFF"
            android:elevation="6dp"
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal|bottom"/>

        <TextView
            android:id="@+id/textDistanceLive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 km"
            android:textSize="18sp"
            android:padding="12dp"
            android:textStyle="bold"
            android:textColor="#007AFF"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"/>

    </FrameLayout>

</layout>
